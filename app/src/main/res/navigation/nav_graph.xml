<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/destination_home">

    <fragment
        android:id="@+id/destination_home"
        android:name="com.example.jvmori.moviesapp.view.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/destination_discover"
            app:destination="@+id/destination_discover" />
        <action
            android:id="@+id/destination_profile"
            app:destination="@id/destination_profile" />
    </fragment>
    <fragment
        android:id="@+id/destination_discover"
        android:name="com.example.jvmori.moviesapp.view.fragments.DiscoverFragment"
        android:label="fragment_discover"
        tools:layout="@layout/fragment_discover" >
        <action
            android:id="@+id/destination_discover_to_destination_home"
            app:destination="@id/destination_home" />
        <action
            android:id="@+id/action_destination_discover_to_destination_profile"
            app:destination="@id/destination_profile" />
    </fragment>
    <fragment
        android:id="@+id/destination_profile"
        android:name="com.example.jvmori.moviesapp.view.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_destination_profile_to_destination_home"
            app:destination="@id/destination_home" />
        <action
            android:id="@+id/action_destination_profile_to_destination_discover"
            app:destination="@id/destination_discover" />
    </fragment>
</navigation>